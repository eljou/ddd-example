{
  "name": "typescript-node-starter",
  "version": "1.0.0",
  "description": "Simple starter for typescript projects",
  "main": "build/index.js",
  "scripts": {
    "start": "node -r dotenv/config build/index.js",
    "prestart": "npm run build",
    "dev": "npx ts-node -r tsconfig-paths/register -r dotenv/config src/index.ts",
    "start:reservations:dev": "nodemon --exec ts-node -r tsconfig-paths/register -r dotenv/config src/apps/reservations/back/index.ts",
    "start:reservations:build": "node -r dotenv/config build/src/apps/reservations/back/index.js",
    "build": "npx tsc -p .",
    "lint": "eslint --ext .ts ./src",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --detectOpenHandles --runInBand --forceExit",
    "test:integration": "jest --detectOpenHandles --runInBand --forceExit --config ./integration.jest.config.js",
    "test:watch": "npm test -- --watchAll --runInBand",
    "coverage": "npm test -- --coverage --no-cache --detectOpenHandles",
    "coverage:watch": "npm run coverage -- --forceExit --watch"
  },
  "keywords": [],
  "author": "Ernesto Fuentes GÃ³mez",
  "license": "ISC",
  "dependencies": {
    "@hapi/boom": "^10.0.0",
    "@koa/cors": "^4.0.0",
    "ansi-colors": "^4.1.3",
    "bson": "^4.7.0",
    "dotenv": "^6.2.0",
    "koa": "^2.14.1",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^12.0.0",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/jest": "^28.1.8",
    "@types/koa": "^2.13.5",
    "@types/koa__cors": "^3.3.0",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-router": "^7.4.4",
    "@types/node": "^18.7.13",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.0.1",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.4"
  },
  "_moduleAliases": {
    "@src": "build"
  }
}
